<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/constraintbackgraund"
    tools:context=".Only2x2Fragment">


    <TextView
        android:id="@+id/only2x2TextViewRemainingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="100dp"
        android:text="Kalan Süre: "
        android:textColor="@color/textColor"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/only2x2TextViewPlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/only2x2TextViewSkor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:text="Puanınız: 0.0"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/only2x2TextViewRemainingTime" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="411dp"
        android:layout_height="418dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/only2x2TextViewSkor"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="25dp"
                    android:layout_height="29dp"
                    android:layout_weight="0" />

                <ImageButton
                    android:id="@+id/only2x2ImageViewImage1"
                    android:layout_width="174dp"
                    android:layout_height="194dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/black" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="29dp"
                    android:layout_weight="0" />

                <ImageButton
                    android:id="@+id/only2x2ImageViewImage2"
                    android:layout_width="174dp"
                    android:layout_height="194dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/black" />


            </LinearLayout>

        </TableRow>

        <Space
            android:layout_width="25dp"
            android:layout_height="29dp"
            android:layout_weight="0" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="25dp"
                    android:layout_height="29dp"
                    android:layout_weight="0" />

                <ImageButton
                    android:id="@+id/only2x2ImageViewImage3"
                    android:layout_width="174dp"
                    android:layout_height="194dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/black" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="29dp"
                    android:layout_weight="0" />

                <ImageButton
                    android:id="@+id/only2x2ImageViewImage4"
                    android:layout_width="174dp"
                    android:layout_height="194dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/black" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="29dp"
                    android:layout_weight="0" />
            </LinearLayout>

        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/only2x2TextViewPlay"
        android:layout_width="50dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/play"
        app:layout_constraintEnd_toStartOf="@+id/only2x2ImageViewSound"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/only2x2ImageViewSound"
        android:layout_width="52dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/sound"
        app:layout_constraintEnd_toStartOf="@+id/only2x2TextViewPause"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/only2x2TextViewPause"
        android:layout_width="52dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/pause"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>